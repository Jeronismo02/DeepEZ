{% extends 'app.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/credentials/list.css') }}" rel="stylesheet" media="screen"/>
{% endblock %}

{% block javascripts %}
    <script src="https://kit.fontawesome.com/b247ef6678.js" crossorigin="anonymous"></script>
{% endblock %}

{% block content %}
    <div id="header">
        <a href="{{ path('add-credential') }}" class="btn btn-add">Ajouter</a>
        <input placeholder="Search (Work In Progress)" type="text"/>
    </div>
    <div class="display-block">
        {% for credential in credentials %}
            {{ include('credentials/_list_element.html.twig', {'credential': credential}) }}
        {% endfor %}
    </div>
{% endblock %}